<div class="listareservas-content">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= title %></h1>
    <% if (usuarioSesion && usuarioSesion.rol === 'Admin') { %>
      <a href="/reserva" class="btn btn-primary btn-lg">
        <span class="lang lang-es">Nueva Reserva</span>
        <span class="lang lang-en d-none">New Booking</span>
      </a>
    <% } %>
  </div>

  <form action="<%= (usuarioSesion && usuarioSesion.rol === 'Admin') ? '/reserva/listareservas' : '/reserva/mis-reservas' %>" method="GET" class="mb-4">
    <fieldset>
      <legend class="w-auto">Filtros</legend>

      <div class="row g-3">
        
        <% if (usuarioSesion && usuarioSesion.rol === 'Admin') { %>
          <div class="col-md-6 col-lg-4">
            <label for="filtroUsuario" class="form-label">Usuario</label>
            <select name="id" id="filtroUsuario" class="form-select">
              <option value="" <%= (idSeleccionado === 0) ? 'selected' : '' %>>
                Todos los Usuarios
              </option>
              <% if (todosLosUsuarios && todosLosUsuarios.length > 0) { %>
                <% todosLosUsuarios.forEach(u => { %>
                  <option value="<%= u.id_usuario %>" <%= (u.id_usuario === idSeleccionado) ? 'selected' : '' %>>
                    <%= u.nombre %> (<%= u.correo %>)
                  </option>
                <% }) %>
              <% } %>
            </select>
          </div>
        <% } %>

        <div class="col-md-6 <%= (usuarioSesion && usuarioSesion.rol === 'Admin') ? 'col-lg-4' : 'col-lg-4' %>">
          <label for="filtroVehiculo" class="form-label">Vehículo</label>
          <select name="vehiculo" id="filtroVehiculo" class="form-select">
            <option value="" <%= (vehiculoSeleccionado === 0) ? 'selected' : '' %>>
              Todos los Vehículos
            </option>
            <% if (todosVehiculos && todosVehiculos.length > 0) { %>
              <% todosVehiculos.forEach(v => { %>
                <option value="<%= v.id_vehiculo %>" <%= (v.id_vehiculo == vehiculoSeleccionado) ? 'selected' : '' %>>
                  <%= v.marca %> <%= v.modelo %> (<%= v.matricula %>)
                </option>
              <% }) %>
            <% } %>
          </select>
        </div>

        <div class="col-md-6 <%= (usuarioSesion && usuarioSesion.rol === 'Admin') ? 'col-lg-4' : 'col-lg-4' %>">
          <label for="filtroEstado" class="form-label">Estado</label>
          <select name="estado" id="filtroEstado" class="form-select">
            <option value="" <%= (estadoSeleccionado === '') ? 'selected' : '' %>>
              Todos los Estados
            </option>
            <% if (estadosDisponibles && estadosDisponibles.length > 0) { %>
              <% estadosDisponibles.forEach(e => { %>
                <option value="<%= e %>" <%= (e === estadoSeleccionado) ? 'selected' : '' %>>
                  <%= e.charAt(0).toUpperCase() + e.slice(1) %>
                </option>
              <% }) %>
            <% } %>
          </select>
        </div>

        <div class="col-md-6 col-lg-4">
          <label for="filtroFechaDesde" class="form-label">Desde (Fecha Inicio)</label>
          <input type="datetime-local" class="form-control" id="filtroFechaDesde" name="fecha_desde" value="<%= fechaDesdeSeleccionada %>">
        </div>

        <div class="col-md-6 col-lg-4">
          <label for="filtroFechaHasta" class="form-label">Hasta (Fecha Fin)</label>
          <input type="datetime-local" class="form-control" id="filtroFechaHasta" name="fecha_hasta" value="<%= fechaHastaSeleccionada %>">
        </div>

        <div class="col-md-6 col-lg-4 d-flex align-items-end">
          <!-- Solo botón Limpiar ocupando todo el ancho -->
          <button type="button" id="btnLimpiar" class="btn btn-outline-secondary w-100">
            <i class="bi bi-x-circle"></i> Limpiar Filtros
          </button>
        </div>
      </div> 
    </fieldset>
  </form>

  <!-- ALERTAS -->
  <div id="alertas"></div>
      
  <div class="table-responsive-md">
    <table class="table table-hover" aria-describedby="tabla-reservas-descripcion">
      <caption class="text-center">
        Reservas mostradas: <strong id="contadorReservas">0</strong>
      </caption>

      <thead class="table-dark">
        <tr>
          <% if (usuarioSesion && usuarioSesion.rol === 'Admin') { %>
            <th scope="col">Usuario</th>
          <% } %>
          <th scope="col">Vehículo</th>
          <th scope="col">Fecha Inicio</th>
          <th scope="col">Fecha Fin</th>
          <th scope="col">Estado</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>

      <tbody id="tablaReservasBody">
        <tr>
          <td colspan="7" class="text-center">Cargando datos...</td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div id="tabla-reservas-descripcion" class="visually-hidden">Listado de reservas</div>

</div> 

<!-- MODAL CANCELAR -->
<div class="modal fade" id="confirmarCancelarModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Cancelar Reserva</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        ¿Estás seguro de que quieres cancelar la reserva?
        <br>
        <div class="d-flex justify-content-end mt-3 gap-2">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No, volver</button>
          <form id="formCancelarReserva" action="" method="POST" class="m-0 p-0">
            <button type="submit" class="btn btn-primary">Sí, cancelar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="pageData" data-user='<%- JSON.stringify(usuarioSesion || null) %>'></div>

<!-- SCRIPTS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
<script src="/js/modal.js"></script>
<script src="/js/ajax/reservas/reservasLista.js"></script>