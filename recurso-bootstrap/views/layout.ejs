        </div>
      </div>

      <!-- MODAL ACCESIBILIDAD ESTILIZADO -->
      <div class="modal fade" id="accesibilidadModal" tabindex="-1" aria-labelledby="accesibilidadModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
              <h5 class="modal-title" id="accesibilidadModalLabel">
                <span lang="es" class="lang lang-es">Ajustes de accesibilidad</span>
                <span lang="en" class="lang lang-en d-none">Accessibility Settings</span>
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
              <!-- Tema -->
              <div class="mb-4">
                <h6>
                  <span lang="es" class="lang lang-es">Tema</span>
                  <span lang="en" class="lang lang-en d-none">Theme</span>
                </h6>
                <div class="d-flex gap-2">
