                  <span lang="en" class="lang lang-en d-none ms-1">Settings</span>
                </a>
              </div>

              <% if (!usuarioSesion) { %>
                <a href="/login" class="nav-link" aria-current="page">Identif√≠cate</a>
              <% } else { %>
