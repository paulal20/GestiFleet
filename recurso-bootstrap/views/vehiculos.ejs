<div class="vehiculos-content">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Vehículos ofertados en GestiFleet:</h1>

    <form method="GET" action="/vehiculos" class="d-flex gap-2 align-items-center">
      <label for="tipo" class="mb-0">Filtrar por tipo:</label>
      <select name="tipo" id="tipo" class="form-select w-auto">
        <option value="">Todos</option>
        <% if (tiposDisponibles && tiposDisponibles.length > 0) { %>
          <% tiposDisponibles.forEach(function(t) { %>
            <option value="<%= t %>"> <%= t %> </option>
          <% }) %>
        <% } %>
      </select>
      <button type="submit" class="btn btn-primary">Filtrar</button>
    </form>
  </div>        

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% if (vehiculos && vehiculos.length > 0) { %>
      <% vehiculos.forEach(v => { %>
      <div class="col">
        <div class="vehiculo-card card h-100">
          <div class="vehiculo-img-container">
            <img src="/img/vehiculos/<%= v.nombre.toLowerCase() %>.png" class="card-img-top" alt="<%= v.marca %>">
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= v.marca %></h5>
            <p class="card-text"><%= v.descripcion %></p>
            <p class="card-text">Tipo: <%= v.tipo %></p>
            <p class="text-muted">Desde <%= v.precio %> €</p>

            <a href="/vehiculos/<%= v.id %>" class="text-primary d-block mb-2">Ver detalles</a>  
          </div>
          <div class="card-footer p-0">
            <!-- <a href="/vehiculos/<%= v.id %>" class="btn btn-primary w-50 rounded-0">Ver detalle</a> -->
            <a href="/reserva" class="btn btn-primary w-100 rounded-0">Reservar</a>
          </div>
        </div>
      </div>
      <% }) %>
    <% } else { %>
      <p>No se encontraron vehículos para este tipo.</p>
    <% } %>
  </div>
</div>