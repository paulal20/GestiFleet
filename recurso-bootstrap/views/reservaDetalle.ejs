<div class="reserva-detalle-content">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= title %></h1>
    <% if (usuario && usuario.rol === 'Admin') { %>
      <a href="/reserva/listareservas" class="btn btn-outline-secondary">
        <span class="lang lang-es">Ver Todas las Reservas</span>
        <span class="lang lang-en d-none">View All Bookings</span>
      </a>
    <% } else { %>
      <a href="/reserva/mis-reservas" class="btn btn-outline-secondary">
        <span class="lang lang-es">Mis Reservas</span>
        <span class="lang lang-en d-none">My Bookings</span>
      </a>
    <% } %>
  </div>

  <div class="vehiculo-card card mx-auto" style="max-width: 900px;">
    <div class="row g-0">

      <div class="col-md-6">
        <div class="vehiculo-img-container h-100">
          <img src="<%= reserva.imagen %>" 
               class="rounded-start img-cover" 
               alt="<%= reserva.marca %> <%= reserva.modelo %>">
        </div>
      </div>

      <div class="col-md-6 d-flex flex-column">

        <div class="card-header">
          <h5 class="mb-0 fw-bold">
            <span class="lang lang-es">Detalles de la Reserva</span>
            <span class="lang lang-en d-none">Booking Details</span>
          </h5>
        </div>

        <div class="card-body flex-grow-1">

          <div class="row mb-2">
            <div class="col-sm-4 fw-bold">
              <span class="lang lang-es">Vehículo</span>
              <span class="lang lang-en d-none">Vehicle</span>
            </div>
            <div class="col-sm-8">
              <%= reserva.marca %> <%= reserva.modelo %> (<%= reserva.matricula %>)
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-sm-4 fw-bold">
              <span class="lang lang-es">Usuario</span>
              <span class="lang lang-en d-none">User</span>
            </div>
            <div class="col-sm-8">
              <%= reserva.nombre_usuario %> (<%= reserva.email_usuario %>)
            </div>
          </div>
          
          <hr class="my-3">

          <div class="row mb-2">
            <div class="col-sm-4 fw-bold">
              <span class="lang lang-es">Fecha de Inicio</span>
              <span class="lang lang-en d-none">Start Date</span>
            </div>
            <div class="col-sm-8">
              <%= new Date(reserva.fecha_inicio).toLocaleString() %>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-sm-4 fw-bold">
              <span class="lang lang-es">Fecha de Fin</span>
              <span class="lang lang-en d-none">End Date</span>
            </div>
            <div class="col-sm-8">
              <%= new Date(reserva.fecha_fin).toLocaleString() %>
            </div>
          </div>
          
          <hr class="my-3">

          <div class="row mb-2">
            <div class="col-sm-4 fw-bold">
              <span class="lang lang-es">Estado</span>
              <span class="lang lang-en d-none">Status</span>
            </div>
            <div class="col-sm-8">
              <% if (reserva.estado === 'activa') { %>
                <span class="badge bg-success">Activa</span>
              <% } else if (reserva.estado === 'finalizada') { %>
                <span class="badge bg-secondary">Finalizada</span>
              <% } else if (reserva.estado === 'cancelada') { %>
                <span class="badge bg-danger">Cancelada</span>
              <% } %>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-sm-4 fw-bold">
              <span class="lang lang-es">Kilómetros</span>
              <span class="lang lang-en d-none">Distance</span>
            </div>
            <div class="col-sm-8">
              <%= reserva.kilometros_recorridos || 0 %> km
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-sm-4 fw-bold">
              <span class="lang lang-es">Incidencias</span>
              <span class="lang lang-en d-none">Issues</span>
            </div>
            <div class="col-sm-8">
              <%= reserva.incidencias_reportadas || 'Ninguna' %>
            </div>
          </div>

        </div> 

        <div class="perfil-actions d-flex">
          <% if (reserva.estado === 'activa') { %>
            <form action="/reserva/<%= reserva.id_reserva %>/cancelar" method="POST" class="w-100">
              <button type="submit" class="btn btn-danger w-100">
                <span class="lang lang-es">Cancelar Reserva</span>
                <span class="lang lang-en d-none">Cancel Booking</span>
              </button>
            </form>
          <% } else { %>
             <p class="text-muted text-center w-100 mb-0">
                <span class="lang lang-es">Esta reserva no se puede modificar.</span>
                <span class="lang lang-en d-none">This booking cannot be modified.</span>
             </p>
          <% } %>
        </div>

      </div>
    </div> 
  </div> 

</div>