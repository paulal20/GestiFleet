<div class="concesionario-detalle-content">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 id="tituloConcesionario">Concesionario</h1>
    <% if (usuarioSesion && usuarioSesion.rol === 'Admin') { %>
    <a href="/concesionarios" class="btn btn-outline-secondary">Volver al listado</a>
    <% } %>
  </div>

  <div id="contenedor-alertas" class="mx-auto mb-3" style="max-width: 900px;"></div>

  <div id="infoConcesionario"></div>

  <h2>Vehículos en esta base</h2>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th>Matrícula</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Disponibilidad</th> 
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id="tablaVehiculosBody"></tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitulo">Eliminar</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        ¿Seguro que quieres eliminar <span id="nombreAEliminar" class="fw-bold">este elemento</span>?
        <div class="d-flex justify-content-end mt-3 gap-2">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" id="btnConfirmarEliminar" class="btn btn-primary">Eliminar</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="pageData"
     data-id="<%= idConcesionario %>"
     data-user='<%- JSON.stringify(usuarioSesion || null) %>'>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
<script src="/js/ajax/concesionarios/concesionarioDetalle.js"></script>