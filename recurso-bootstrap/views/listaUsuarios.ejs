<div class="listausuarios-content">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= title %></h1>
    <a href="/usuarios/nuevo" class="btn btn-primary btn-lg">
      <span class="lang lang-es">Nuevo Usuario</span>
      <span class="lang lang-en d-none">New User</span>
    </a>
  </div>

  <form id="formFiltrosUsuarios" class="mb-4">
    <fieldset>
      <legend class="w-auto">Filtros</legend>

      <div class="row g-3 p-2 align-items-end">
        <div class="col-md-4">
          <label for="filtroConcesionario" class="form-label">Concesionario</label>
          <select name="concesionario" id="filtroConcesionario" class="form-select">
            <option value="0">Todos los Concesionarios</option>
            <% if (concesionariosDisponibles && concesionariosDisponibles.length > 0) { %>
              <% concesionariosDisponibles.forEach(c => { %>
                <option value="<%= c.id_concesionario %>">
                    <%= c.nombre %> 
                    <% if(c.ciudad) { %> (<%= c.ciudad %>) <% } %>
                </option>
              <% }) %>
            <% } %>
          </select>
        </div>

        <div class="col-md-4">
          <label for="filtroEstado" class="form-label">Estado</label>
          <select name="estado" id="filtroEstado" class="form-select">
            <option value="">Todos</option>
            <option value="1">Activos</option>
            <option value="0">Eliminados</option>
          </select>
        </div>

        <div class="col-md-4">
          <button type="button" id="btnLimpiar" class="btn btn-outline-secondary w-100">Limpiar Filtros</button>
        </div>
      </div>
    </fieldset>
  </form>

  <div id="alertas"></div>

  <div class="table-responsive-md">
    <table class="table table-hover">
      <caption class="text-center">
        <span class="lang lang-es">Usuarios mostrados: </span>
        <span class="lang lang-en d-none">Users shown: </span>
        <strong id="contadorUsuarios">0</strong>
      </caption>

      <thead class="table-dark">
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Correo</th>
          <th scope="col">Rol</th>
          <th scope="col">Teléfono</th>
          <th scope="col">Concesionario</th>
          <th scope="col">Estado</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>

      <tbody id="tablaUsuariosBody">
      </tbody>
    </table>
  </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="confirmarEliminarUsuarioModal" tabindex="-1" aria-labelledby="confirmarEliminarUsuarioModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="confirmarEliminarUsuarioModalLabel">Eliminar Usuario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>

      <div class="modal-body">
        <p id="textoConfirmacion">¿Estás seguro de que quieres eliminar este usuario?</p>

        <div class="d-flex justify-content-end mt-3 gap-2">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
          <form id="formEliminarUsuario" class="m-0 p-0">
             <button type="submit" class="btn btn-primary">Eliminar</button>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>
<!-- MODAL: Asignar Concesionario -->
<div class="modal fade" id="modalAsignarConcesionario" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Asignar concesionario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <p id="textoAsignarUsuario" class="fw-bold"></p>

        <div class="mb-3">
          <label for="selectConcesionario" class="form-label">Concesionario</label>
          <select id="selectConcesionario" class="form-select">
            <option value="">Seleccione…</option>

            <% if (concesionariosDisponibles && concesionariosDisponibles.length > 0) { %>
              <% concesionariosDisponibles.forEach(c => { %>
                <option value="<%= c.id_concesionario %>">
                  <%= c.nombre %> 
                  <% if(c.ciudad){ %> (<%= c.ciudad %>) <% } %>
                </option>
              <% }) %>
            <% } %>
          </select>

          <span id="errorConcesionario" class="text-danger"></span>
        </div>
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button class="btn btn-primary" id="btnConfirmarAsignar">Asignar</button>
      </div>

    </div>
  </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
<script src="/js/ajax/usuarios/usuariosLista.js"></script>