<%
  // Variables seguras con valores por defecto
  const _status = (typeof status !== 'undefined') ? status : 500;
  const _mensaje = (typeof mensaje !== 'undefined') ? mensaje :
                   ((_status === 404)
                     ? 'La página que buscas no existe.'
                     : 'Ha ocurrido un error en el servidor.');
  const _url = (typeof url !== 'undefined') ? url : '';
%>

<div class="error-page-wrapper">
  <div class="error-box">
    <h1>Error <%= _status %></h1>
    <h2>
      <%= (_status === 404)
          ? 'Página no encontrada'
          : 'Error interno del servidor' %>
    </h2>

    <p><%= _mensaje %></p>

    <% if (_status === 404 && _url) { %>
      <p class="error-url">Ruta: <code><%= _url %></code></p>
    <% } %>

    <div class="error-actions">
      <a href="/" class="btn">Volver al inicio</a>
    </div>
  </div>
</div>
